@model CommonLayer.ViewModels.CourseViewModel

<div class="container">
    <div class="col-sm-6">
        <form method="post" asp-action="Edit">
            @Html.HiddenFor(x=>x.Id)
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
            </div>
            <div class="form-group">
                <label asp-for="Credits"></label>
                <input type="number" class="form-control" asp-for="Credits" value="@Model.Credits">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>